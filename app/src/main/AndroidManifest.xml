<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.assistant.uaua">

		<uses-permission android:name="android.permission.INTERNET"/>
		<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

		<application
				android:name="com.assistant.uaua.ASApp"
				android:allowBackup="true"
				android:icon="@drawable/app_logo"
				android:label="@string/app_name"
				android:roundIcon="@mipmap/ic_launcher_round"
				android:supportsRtl="true"
				android:networkSecurityConfig="@xml/network_security_config"
				android:theme="@style/AppTheme">
				<activity
						android:name="com.assistant.uaua.business.ui.MainActivity"
						android:theme="@style/TranslucentStatusTheme"
						android:label="@string/app_name"/>

				<activity
						android:name="com.assistant.uaua.business.ui.SplashActivity"
						android:theme="@style/TranslucentStatusTheme">
						<intent-filter>
								<action android:name="android.intent.action.MAIN"/>
								<action android:name="android.intent.action.VIEW"/>

								<category android:name="android.intent.category.LAUNCHER"/>
						</intent-filter>
				</activity>

				<activity
						android:name="com.assistant.uaua.business.ui.login.LoginActivity"
						android:theme="@style/AppTheme"
						android:windowSoftInputMode="adjustResize|stateHidden"/>
		</application>


</manifest>